@model IEnumerable<Arrecadar3.Models.Campanha>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ongs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meta_Arrecadacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor_Arrecadado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_Inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagem_Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ongs.Area_Atuacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meta_Arrecadacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor_Arrecadado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_Inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagem_Url)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
